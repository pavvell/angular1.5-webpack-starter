{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,         //specify version of JavaScript
    "sourceType": "module",  // vs. "script" - how code is arranged
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {  //environment defines global variables
    "browser": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": [2, "single"],
    "no-param-reassign": 0,
    "no-unused-vars": 0,
    "no-useless-constructor": 0,
    "indent": 0,
    "no-empty-function": 0,
    "no-console": 0
  }
}